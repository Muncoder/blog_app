<h1>All Articles</h1>

<% @articles.each do |article| %>
	<div class="well">
			<%= link_to article_path(article) do %>
				<h1><%= article.title %></h1>
			<% end %>
		<p><%= truncate(article.body, length: 200) %></p>

	</div>
<% end %>

<% if user_signed_in? %>
	<%= link_to "New Article", new_article_path %>
<% end %>