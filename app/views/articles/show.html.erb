<div class="well">
	<h1><%= @article.title %></h1>	
	<p><%= @article.body %></p>
	<% if user_signed_in? && current_user == @article.user %>
		<%= link_to "Edit Article", edit_article_path(@article), class: "btn btn-info" %>
		<%= link_to "Delete Article", article_path(@article), method: :delete, data: { confirm: "Sure to Delete" }, class: "btn btn-danger" %>
	<% end %>
</div>


